{
  "description": "A way to navigate around different site instances with different users.",
  "homepage_url": "https://github.com/andymckay/site-personas",
  "manifest_version": 2,
  "name": "Site personas",
  "permissions": [
    "cookies",
    "contextualIdentities",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Site personas",
    "default_icon": {
      "128": "icon.svg"
    }
  },
  "page_action": {
    "browser_style": true,
    "default_title": "Site personas",
    "default_icon": {
      "128": "icon.svg"
    },
    "default_popup": "popup.html"
  },
  "version": "0.0.2",
  "applications": {
    "gecko": {
      "id": "site-personas@mckay.pub"
    }
  }
}
